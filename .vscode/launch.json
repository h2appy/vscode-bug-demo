  "version": "0.2.0",
  "configurations": [
  
    {
      "name": "Python: Remote Attach to project-a",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/project-a",
          "remoteRoot": "."
        }
      ],
      "justMyCode": true
    },
    {
      "name": "Python: Remote Attach to project-b",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5679 },
      "pathMappings": [
        { "localRoot": "${workspaceFolder}/project-b", "remoteRoot": "." }
      ],
      "justMyCode": true
    }
  ]
}
